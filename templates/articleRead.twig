{% include "./common/header.twig" %}


<section>
	
	<div class="container">

		<div class="text-center">
				<h2>Read Article</h2>
		</div>
		<hr style="border-color: #e74c3c;">
		<br>

			<section>
				<div class="container table col-md-12 col-sm-12 text-center" >

				<div class="col-md-2 col-sm-2">
					
				</div>
					<div class="col-md-8 col-sm-8 text-center">
						<div>
				        	<h3>
					        	Title:<b>{{ articleDetails.title }}</b>
				        	</h3>
				        </div>
						<div class="row">
					        <b>Author:</b><b style="color: #e74c3c">{{ articleDetails.author_id }}</b>
				        </div>
				        <div class="row">
				        	<p style="color:green;" >Category:{{ articleDetails.category }}</p>
				        </div>
				        <br>
				        <div>
				        	<hr style="border-color: #000">
					        	<div >{{ articleDetails.content | raw }}</div>
					       	<hr style="border-color: #000">
					       	<div><b>Date: {{ articleDetails.date }}</b></div>
				       	</div>
			        </div>
		        </div>

		        <div class="col-md-2 col-sm-2">
					
				</div>
	        </section>
	</div>


</section>


{% include "./common/footer.twig" %}