                                                    {{ category.category }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                            <br>
                                            <input  style="margin-top:20px" id="btnEdit" type="submit" class="btn btn-primary btn-filled"  value="Add Article">
                                        </form>
                                    
                                    </form>
                                </div>

                      
                        </div>
                    <!-- </div> -->
                </div>
            
            </div>

            <div class="col-sm-4  col-xs-6">
            </div>

            <div class="col-sm-4  col-xs-12">
                
            </div>
        </div>
    </div>
</section>








